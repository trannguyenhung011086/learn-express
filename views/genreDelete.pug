extends layout

block content
  h1 Genre: #{genre.name}
  
  if usedBooks.length
  
    p #[strong Delete the following books before attempting to delete this genre.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Books
    
      dl
      each book in usedBooks
        dt 
          a(href=book.url) #{book.title}
        dd #{book.summary}

  else
    p Do you really want to delete this genre?
    
    form(method='POST' action='')
      div.form-group
        input#genreid.form-control(type='hidden',name='genreid', required=true, value=genre._id )

      button.btn.btn-primary(type='submit') Delete